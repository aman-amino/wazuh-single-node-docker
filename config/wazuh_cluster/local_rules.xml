<group name="windows,powershell,noise">

  <rule id="90020" level="0">
    <if_matched_sid>18107</if_matched_sid> <!-- PowerShell Script Block (4104) -->
    <field name="win.eventdata.ScriptBlockText">Get-Counter.*Available MBytes.*ConvertTo-Json</field>
    <description>Benign Wazuh PowerShell memory telemetry</description>
  </rule>

</group>


<group name="windows,performance,">
  <rule id="90053" level="0">
    <decoded_as>win_perf_counter_json</decoded_as>
    <description>Windows performance counter log</description>
  </rule>

  <rule id="90054" level="8">
    <decoded_as>win_perf_counter_json</decoded_as>
    <field name="winCounter.CookedValue"> > 80 </field>
    <description>High CPU usage</description>
  </rule>
</group>

